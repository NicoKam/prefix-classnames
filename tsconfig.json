{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "removeComments": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "es",
    "**/*.spec.ts"
  ]
}